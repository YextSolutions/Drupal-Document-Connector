{
  "$id": "drupalDocument_documentConnector",
  "$schema": "https://schema.yext.com/config/km/connector/v3",
  "displayName": "Drupal Document Connector",
  "entityType": "drupalDocument_document",
  "source": {
    "sourceConfig": {
      "apiPullConfig": {
        "requestType": "GET",
        "url": "${{drupalDomain}}/jsonapi/media/document",
        "paginationControl": {
          "cursorPagination": {
            "cursor": "links.next.href",
            "cursorType": "FULL_URL",
            "detectCursorInHeader": false
          }
        },
        "headers": {
          "Accept": "application/vnd.api+json",
          "Content-Type": "application/vnd.api+json"
        },
        "queryParams": {
          "per_page": "50"
        },
        "dataFormat": "JSON"
      }
    },
    "baseSelector": {
      "type": "JSON",
      "header": "Entity Container",
      "path": "data"
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "Name",
        "path": "attributes.name"
      },
      {
        "type": "JSON",
        "header": "Entity ID",
        "path": "id"
      },
      {
        "type": "JSON",
        "header": "Created Date",
        "path": "attributes.created"
      },
      {
        "type": "JSON",
        "header": "Landing Page URL",
        "path": "relationships.field_media_document.data.id"
      },
      {
        "type": "JSON",
        "header": "Creator",
        "path": "relationships.uid.data.id"
      },
      {
        "type": "JSON",
        "header": "File Type",
        "path": "attributes.field_mime"
      }
    ]
  },
  "transforms": [
    {
      "function": {
        "inputHeaders": {
          "headers": [
            "Landing Page URL"
          ]
        },
        "plugin": "drupalDocument_extractFileUrl",
        "function": "extractFileUrl"
      }
    },
    {
      "function": {
        "inputHeaders": {
          "headers": [
            "Creator"
          ]
        },
        "plugin": "drupalDocument_getUser",
        "function": "getUser"
      }
    },
    {
      "extractText": {
        "inputHeader": "Created Date",
        "newColumnHeader": "Created Date - Formatted",
        "extractOperation": "ALL_TEXT_BEFORE",
        "extractFrom": "FIRST_INSTANCE_MATCHING_TEXT",
        "valueToFind": {
          "plainText": {
            "value": "T",
            "ignoreCase": false
          }
        }
      }
    },
    {
      "extractText": {
        "inputHeader": "File Type",
        "newColumnHeader": "File Type - Formatted",
        "extractOperation": "ALL_TEXT_AFTER",
        "extractFrom": "FIRST_INSTANCE_MATCHING_TEXT",
        "valueToFind": {
          "plainText": {
            "value": "/",
            "ignoreCase": false
          }
        }
      }
    }
  ],
  "mappings": [
    {
      "field": "landingPageUrl",
      "header": "Landing Page URL",
      "subfieldPath": []
    },
    {
      "field": "entityId",
      "header": "Entity ID",
      "subfieldPath": []
    },
    {
      "field": "drupalDocument_creator",
      "header": "Creator",
      "subfieldPath": []
    },
    {
      "field": "drupalDocument_createdDate",
      "header": "Created Date - Formatted",
      "subfieldPath": []
    },
    {
      "field": "name",
      "header": "Name",
      "subfieldPath": []
    },
    {
      "field": "drupalDocument_fileType",
      "header": "File Type - Formatted",
      "subfieldPath": []
    }
  ]
}